<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/want_random"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/tvViltuRandom"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <CheckBox android:id="@+id/checkbox_crime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crime"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_drama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drama"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_adventure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adventure"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_scifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sci-Fi"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_comedy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comedy"
        android:onClick="onCheckboxClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View bookmarked movies"
        android:id="@+id/bSQLopenView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_random"
        android:id="@+id/bVilRandom"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tilbaka"
        android:id="@+id/bTilBaka"
        android:layout_gravity="center_horizontal" />

</LinearLayout>